<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="推荐"
        android:textColor="#5cb9af"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_linearLayout"
        android:orientation="vertical"
           >

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="150dip" >

               <android.support.v4.view.ViewPager
                   android:id="@+id/vp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="1dip"
                   android:layout_gravity="bottom"

                   android:gravity="right"
                   android:orientation="vertical" >


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="3dip"
                       android:orientation="horizontal" >

                       <View
                           android:id="@+id/dot_0"
                           android:layout_width="5dip"
                           android:layout_height="5dip"
                           android:layout_marginLeft="2dip"
                           android:layout_marginRight="2dip"
                           android:background="@mipmap/dian1"/>

                       <View
                           android:id="@+id/dot_1"
                           android:layout_width="5dip"
                           android:layout_height="5dip"
                           android:layout_marginLeft="2dip"
                           android:layout_marginRight="2dip"
                           android:background="@mipmap/dian2"/>
                       <View
                           android:id="@+id/dot_2"
                           android:layout_width="5dip"
                           android:layout_height="5dip"
                           android:layout_marginLeft="2dip"
                           android:layout_marginRight="2dip"
                           android:background="@mipmap/dian3"/>
                       <View
                           android:id="@+id/dot_3"
                           android:layout_width="5dip"
                           android:layout_height="5dip"
                           android:layout_marginLeft="2dip"
                           android:layout_marginRight="2dip"
                           android:background="@mipmap/dian4"/>


                   </LinearLayout>
               </LinearLayout>
           </FrameLayout>

           <!--<LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="137dp"
               android:orientation="vertical"
              >

               <ImageView
                   android:id="@+id/news_imageView"
                   android:layout_width="wrap_content"
                   android:layout_height="137dp"

                   android:src="@mipmap/news" />
           </LinearLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:id="@+id/dakazhuanlan_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"

                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大咖专栏"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="更多..."
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="4dp"
                    >

                    <com.example.qiao.myapplication.ShapedImageView
                        android:id="@+id/dakazhuanlan1_ImageView"
                        android:layout_width="160dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/dakazhuanlan"
                        test:shape_mode="round_rect"
                        test:round_radius="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宝宝发育期突然说脏话了怎么办？"

                        android:textSize="14sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投票203"
                        android:layout_marginTop="5dp"
                        android:textColor="#565656"
                        android:textSize="12sp"


                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="15dp"
                    >

                    <com.example.qiao.myapplication.ShapedImageView
                        android:id="@+id/dakazhuanlan2_ImageView"
                        android:layout_width="160dp"
                        android:layout_height="110dp"
                        test:round_radius="15dp"
                        test:shape_mode="round_rect"
                        android:src="@mipmap/dakazhuanlan2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="谢娜哺乳期减肥暴瘦，哺乳期可以减肥吗？" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投票398"
                        android:layout_marginTop="5dp"
                        android:textColor="#565656"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="10dp"
               android:background="#c2c1c1"
               />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/falvkepu_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="法律科普"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/more2_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多..."
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <com.example.qiao.myapplication.ShapedImageView
                    android:id="@+id/imageView"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    test:shape_mode="round_rect"
                    test:round_radius="15dp"
                   android:src="@mipmap/falvkepu1" />

                <LinearLayout
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/textViewpi"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:text="娃的臭屁、响屁、夹心屁用好了就是“化学救命武器"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="科学家庭育儿"
                        android:textSize="14sp"
                        android:textColor="#51bcc6"
                        android:layout_marginTop="32dp"
                        />

                    <TextView
                        android:id="@+id/textViewtaolun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1531 读过·6 讨论"
                        android:paddingTop="10dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <com.example.qiao.myapplication.ShapedImageView
                    android:id="@+id/imageView2"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    test:round_radius="15dp"
                    test:shape_mode="round_rect"
                   android:src="@mipmap/falvkepu2" />

                <LinearLayout
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"

                    >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="205dp"
                        android:layout_height="wrap_content"
                        android:text="听起来“匪夷所思”？最近我在刻意让孩子对我多"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="慢成长"
                        android:textSize="14sp"
                        android:textColor="#51bcc6"
                        android:layout_marginTop="32dp"
                        />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3666 读过·19 讨论"
                        android:paddingTop="10dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="-用启护在家早教-"
               android:textSize="12sp"
               android:layout_gravity="center"
               android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
