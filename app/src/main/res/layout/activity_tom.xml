<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tom">
    <LinearLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"

            android:src="@mipmap/arrows"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘本详情"
            android:textColor="#02b5bc"
            android:textSize="20sp"
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:id="@+id/b"

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c2c1c1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="《汤姆走丢了》"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="209dp"
                android:layout_height="189dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:srcCompat="@mipmap/tom" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:text="内容简介"
                    android:textSize="19sp"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/title"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="10dp"
                android:text="汤姆和妈妈一起去商店买东西。商店里，有许许多多的人和好看的东西，汤姆的眼睛都不够用了。他一心想着自己要买的那条裤子。可是，一转身，发现妈妈不见了！汤姆到处跑，到处找妈妈……汤姆走丢了。在一群陌生人中间，汤姆很害怕。”"
                android:textColor="#383838"
                android:textSize="19dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="购买链接"
                    android:textColor="#383838"
                    android:textSize="19dp" />

                <ImageView

                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/title"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐链接：玛丽阿丽娜巴文《汤姆走丢了》"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#4894ea"
                android:onClick="openWeb"
                tools:ignore="OnClick" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="内页剧透"
                    android:textSize="19dp"
                    android:textColor="#383838"/>

                <ImageView

                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/title"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/tomone" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/tomtwo" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>